

# build节点
[k8s-build]
k8s-master1

# master节点
[k8s-masters]
k8s-master1  node_name=k8s-master1
k8s-master2 node_name=k8s-master2
k8s-master3 node_name=k8s-master3

# node 节点
[k8s-nodes]
k8s-node1 node_name=k8s-node1
k8s-node2 node_name=k8s-node2
k8s-node3 node_name=k8s-node3

[all:vars]
# 多节点
etcd_ip=http://k8s-master1:2379,http://k8s-master2:2379,http://k8s-master3:2379
# service 的ip 段
service_cluster_ip_range=169.169.0.0/16
# nginx ip
api_server_ip=https://k8s-master1:443
# 默认为service ip段的 第二个
dns_server_ip=169.169.0.2
dns_domain=cluster.local
# k8s 服务器，用于配置nginx
nginx_k8s_servers=server k8s-master1:6443; server k8s-master2:6443;server k8s-master3:6443;
ETCD_INITIAL_CLUSTER=k8s-master1=http://k8s-master1:2380,k8s-master2=http://k8s-master2:2380,k8s-master3=http://k8s-master3:2380
