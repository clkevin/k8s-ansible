#!/bin/bash

kubectl config set-cluster kubernetes \
  --certificate-authority=/opt/kubernetes/ssl/ca.pem \
  --embed-certs=true \
  --server=https://{{api_server_ip}}:6443 \
  --kubeconfig=/opt/kubernetes/conf/$1.kubeconfig
kubectl config set-credentials $1 \
  --client-certificate=/opt/kubernetes/ssl/$1.pem \
  --client-key=/opt/kubernetes/ssl/$1-key.pem \
  --embed-certs=true \
  --kubeconfig=/opt/kubernetes/conf/$1.kubeconfig
kubectl config set-context default \
  --cluster=kubernetes \
  --user=$1 \
  --kubeconfig=/opt/kubernetes/conf/$1.kubeconfig
kubectl config use-context default --kubeconfig=/opt/kubernetes/conf/$1.kubeconfig
